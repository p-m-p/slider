{
  "name": "@boxslider/slider",
  "version": "1.2.0",
  "description": "Flexible and light weight content slider",
  "repository": {
    "type": "git",
    "url": "https://github.com/boxslider/slider/packages/slider"
  },
  "author": "Phil Parsons",
  "license": "MIT",
  "keywords": [
    "boxslider",
    "slider",
    "carousel",
    "cube",
    "3D"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "main": "./dist/cjs/index.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run types",
    "build:cjs": "esbuild `find src \\( -name '*.ts' \\)` --platform=node --format=cjs --tsconfig=../../tsconfig.json --outdir=dist/cjs",
    "build:esm": "esbuild `find src \\( -name '*.ts' \\)` --platform=node --format=esm --tsconfig=../../tsconfig.json --outdir=dist/esm",
    "clean": "rm -rf dist && rm -f LICENSE",
    "prepack": "npm run build && cp ../../LICENSE ./",
    "types": "tsc --project tsconfig.types.json --emitDeclarationOnly --outDir dist/types"
  }
}
