{
  "name": "@boxslider/slider",
  "version": "2.2.0",
  "description": "Flexible and light weight content slider",
  "repository": {
    "type": "git",
    "url": "https://github.com/boxslider/slider/packages/slider"
  },
  "author": "Phil Parsons",
  "license": "MIT",
  "keywords": [
    "boxslider",
    "slider",
    "carousel",
    "cube",
    "3D"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "main": "./dist/cjs/index.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "build": "pnpm run clean && pnpm run esbuild && pnpm run types",
    "clean": "rm -rf dist && rm -f LICENSE",
    "esbuild": "../../scripts/build-node.js && ../../scripts/build-browser.js",
    "prepack": "cp ../../LICENSE ./",
    "types": "tsc --project tsconfig.types.json --emitDeclarationOnly --outDir dist/types"
  }
}
