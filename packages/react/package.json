{
  "name": "@boxslider/react",
  "version": "1.2.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "boxslider",
    "react",
    "slider",
    "carousel",
    "cube",
    "3D"
  ],
  "repository": {
    "type": "Git",
    "url": "https://github.com/boxslider/slider/packages/react"
  },
  "scripts": {
    "build": "npm run clean && NODE_ENV=production babel src --config-file ../../babel.config.js --out-dir dist --extensions \".ts,.tsx\" && npm run types",
    "clean": "rm -rf dist",
    "types": "tsc --project tsconfig.dist.json --emitDeclarationOnly"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@boxslider/slider": "*"
  },
  "peerDependencies": {
    "react": ">=16.0.0",
    "react-dom": ">=16.0.0"
  }
}
