{
  "name": "@boxslider/react",
  "version": "1.2.0",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "main": "./dist/cjs/index.js",
  "types": "./dist/types/index.d.ts",
  "keywords": [
    "boxslider",
    "react",
    "slider",
    "carousel",
    "cube",
    "3D"
  ],
  "repository": {
    "type": "Git",
    "url": "https://github.com/boxslider/slider/packages/react"
  },
  "scripts": {
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run types",
    "build:cjs": "esbuild `find src \\( -name '*.ts' -o -name '*.tsx' \\)` --platform=node --format=cjs --tsconfig=../../tsconfig.json --outdir=dist/cjs",
    "build:esm": "esbuild `find src \\( -name '*.ts' -o -name '*.tsx' \\)` --platform=node --format=esm --tsconfig=../../tsconfig.json --outdir=dist/esm",
    "clean": "rm -rf dist",
    "types": "tsc --project tsconfig.types.json --emitDeclarationOnly --outDir dist/types"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@boxslider/slider": "*"
  },
  "peerDependencies": {
    "react": ">=16.0.0",
    "react-dom": ">=16.0.0"
  }
}
